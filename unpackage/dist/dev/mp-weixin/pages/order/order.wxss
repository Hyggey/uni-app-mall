page {
  height: 100%;
}
.content {
  background: #f8f8f8;
  height: 100%;
}
.content .navbar {
    height: 40px;
    background: #FFFFFF;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    padding: 0 5px;
    box-sizing: border-box;
    box-shadow: 0 1px 5px rgba(0, 0, 0, 0.06);
}
.content .navbar .tab_item {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
              justify-content: center;
      position: relative;
      color: #303133;
      font-size: 15px;
}
.content .navbar .active {
      color: #fa436a;
}
.content .navbar .active:after {
        content: '';
        position: absolute;
        width: 44px;
        border-bottom: 2px solid #fa436a;
        bottom: 0;
}
.content .swiper_box {
    height: calc(100% - 40px);
}
.content .swiper_box .swiper_content .order-item {
      padding: 10rpx;
      box-sizing: border-box;
      background: #fff;
}
.content .swiper_box .swiper_content .order-item .itemTop {
        height: 80rpx;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        font-size: 28rpx;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
        border-bottom: 1px solid #DCDFE6;
}
.content .swiper_box .swiper_content .order-item .itemTop text:first-child {
          -webkit-box-flex: 1;
          -webkit-flex: 1;
                  flex: 1;
}
.content .swiper_box .swiper_content .order-item .itemTop .del_btn {
          color: #909399;
          padding: 5rpx 0rpx 0 30rpx;
          position: relative;
          box-sizing: border-box;
}
.content .swiper_box .swiper_content .order-item .itemTop .del_btn:after {
            content: '';
            position: absolute;
            height: 30rpx;
            width: 0;
            border: 1rpx solid #DCDFE6;
            left: 16rpx;
            top: 50%;
            -webkit-transform: translateY(-50%);
                    transform: translateY(-50%);
}
.content .swiper_box .swiper_content .order-item .goods_box {
        white-space: nowrap;
        padding: 20rpx 0;
        height: 160rpx;
}
.content .swiper_box .swiper_content .order-item .goods_box .goods_item {
          width: 120rpx;
          height: 120rpx;
          display: inline-block;
          margin-right: 20rpx;
}
.content .swiper_box .swiper_content .order-item .goods_box .goods_item image {
            width: 100%;
            height: 100%;
}

