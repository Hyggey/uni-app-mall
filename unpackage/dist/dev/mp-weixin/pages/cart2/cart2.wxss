.container {
  padding-bottom: 130rpx;
  box-sizing: border-box;
}
.container .cart_list .cart_item {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    padding: 30rpx 40rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #E4E7ED;
}
.container .cart_list .cart_item .image_wrapper {
      width: 230rpx;
      height: 230rpx;
      -webkit-flex-shrink: 0;
              flex-shrink: 0;
      position: relative;
}
.container .cart_list .cart_item .image_wrapper image {
        width: 100%;
        height: 100%;
}
.container .cart_list .cart_item .image_wrapper .icon-xuanzhong2 {
        font-size: 44rpx;
        position: absolute;
        top: -17rpx;
        left: -16rpx;
        background: #fff;
        border-radius: 50%;
        padding: 0 4rpx;
        color: #C0C4CC;
}
.container .cart_list .cart_item .image_wrapper .checked {
        color: #fa436a;
}
.container .cart_list .cart_item .item_middle {
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
              flex-direction: column;
      margin-left: 30rpx;
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      box-sizing: border-box;
}
.container .cart_list .cart_item .item_middle text {
        font-size: 30rpx;
        color: #303133;
}
.container .cart_list .cart_item .item_middle text:nth-child(1) {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        display: block;
}
.container .cart_list .cart_item .item_middle text:nth-child(2) {
        font-size: 26rpx;
        color: #909399;
}
.container .cart_list .cart_item .yticon {
      padding: 4rpx 10rpx;
      box-sizing: border-box;
}
.container .menu_section {
    position: fixed;
    bottom: 30rpx;
    width: 100%;
    height: 100rpx;
    background: rgba(255, 255, 255, 0.9);
    box-shadow: 0 0 20rpx 0 rgba(0, 0, 0, 0.5);
    border-radius: 16rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    padding: 0 30rpx;
    box-sizing: border-box;
    z-index: 99;
}
.container .menu_section .checkbox {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      position: relative;
}
.container .menu_section .checkbox image {
        width: 52rpx;
        height: 52rpx;
        position: relative;
        z-index: 5;
}
.container .menu_section .checkbox .clear_btn {
        background: #C0C4CC;
        color: #FFFFFF;
        height: 52rpx;
        line-height: 52rpx;
        border-radius: 0 50px 50px 0;
        padding-left: 38rpx;
        left: 26rpx;
        position: absolute;
        top: 0;
        font-size: 28rpx;
        box-sizing: border-box;
        opacity: 0;
        width: 0;
        -webkit-transition: .2s;
        transition: .2s;
}
.container .menu_section .checkbox .clear_btn.show {
          opacity: 1;
          width: 120rpx;
}
.container .menu_section .total_price {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
              flex-direction: column;
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      text-align: right;
      color: #303133;
      padding-right: 30rpx;
      box-sizing: border-box;
}
.container .menu_section .total_price .price_item {
        font-size: 32rpx;
}
.container .menu_section .total_price .low {
        font-size: 24rpx;
}
.container .menu_section .total_price .low text {
          color: #909399;
}
.container .menu_section button[type=primary] {
      border-radius: 100px;
      height: 76rpx;
      line-height: 76rpx;
      font-size: 30rpx;
      padding: 0 38rpx;
      background: #fa436a;
}

